@model IEnumerable<SalesWebMVC.Models.DTO.SellerEntityDTOResponse>

@{
    ViewData["Title"] = "Sellers";
}


<h2> @ViewData["Title"]</h2>


<p>
    <a asp-action="Create" class="btn  btn-default">Create New</a>
</p>

<table class="table table-striped table-hover">
    <thead>

        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.DsNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DsEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DhAniversario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NrSalario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
        </tr>
        <th></th>
    </thead>
    <tbody>
        @foreach(var seller in Model)
        {
            <tr>
                <td>
                     @Html.DisplayFor(modelItem => seller.DsNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => seller.DsEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => seller.DhAniversario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => seller.NrSalario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => seller.Department.DsNome)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@seller.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@seller.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@seller.Id">Delete</a>
                </td>
             </tr>
        }
    </tbody>
</table>