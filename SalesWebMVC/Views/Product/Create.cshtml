@model SalesWebMVC.Models.DTO.ProductDTO

@{
    ViewData["Title"] = "Create";
}


<h2>@ViewData["Title"]</h2>

<h4> Product</h4>
</hr>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DsNome" class="control-label"></label>
                <input asp-for="DsNome" class="form-control" />
            </div>
            </hr>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            </hr>
            <div class="form-group">
                @* Identificador do Create com o HttpPost é usar esse input escondido*@
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
@* Configurando validações feita por annotations *@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}