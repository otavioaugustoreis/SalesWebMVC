@using SalesWebMVC._1___Application.Models;

@model SalesRecordsSearchViewModel

@{
    ViewData["Title"] = "Simple Search";
}

<h2>@ViewData["Title"]</h2>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search" method="get">
            <div class="form-group">
                <label for="Filter.minDate">Min Date</label>
                <input type="date" class="form-control" name="minDate" value="@Model.Filter.minDate?.ToString("yyyy-MM-dd")" />
            </div>
            <div class="form-group">
                <label for="Filter.maxDate">Max Date</label>
                <input type="date" class="form-control" name="maxDate" value="@Model.Filter.maxDate?.ToString("yyyy-MM-dd")" />
            </div>
            <div class="form-group">
                <label for="Filter.DsNome">Name Seller</label>
                <input type="text" class="form-control" name="DsNome" value="@Model.Filter.DsNome" placeholder="Enter seller name" />
            </div>
            <button type="submit" class="btn btn-primary">Filter</button>
        </form>
    </div>
</nav>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Total sales = @Model.SalesRecords.Sum(obj => obj.Valor).ToString("F2")</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>@Html.DisplayNameFor(model => model.SalesRecords.FirstOrDefault().Id)</th>
                    <th>@Html.DisplayNameFor(model => model.SalesRecords.FirstOrDefault().Seller)</th>
                    <th>@Html.DisplayNameFor(model => model.SalesRecords.FirstOrDefault().Seller.Department)</th>
                    <th>@Html.DisplayNameFor(model => model.SalesRecords.FirstOrDefault().DhInclusao)</th>
                    <th>@Html.DisplayNameFor(model => model.SalesRecords.FirstOrDefault().Valor)</th>
                    <th>@Html.DisplayNameFor(model => model.SalesRecords.FirstOrDefault().SaleStatus)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.SalesRecords)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Seller.DsNome)</td>
                        <td>@Html.DisplayFor(modelItem => item.Seller.Department.DsNome)</td>
                        <td>@Html.DisplayFor(modelItem => item.DhInclusao)</td>
                        <td>@Html.DisplayFor(modelItem => item.Valor)</td>
                        <td>@Html.DisplayFor(modelItem => item.SaleStatus)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
